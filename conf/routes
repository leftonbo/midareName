# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Letter definition
GET     /letters                    controllers.Application.letterList()
GET     /letters/new                controllers.Application.letterNew()
POST    /letters                    controllers.Application.letterWrite()
GET     /letters/:str                controllers.Application.letterSelectList(str:String)
GET     /letters/:id                 controllers.Application.letterEdit(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
